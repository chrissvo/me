<div class="resume-section {{if (even section.id) 'right' 'left'}}">
  <div class="from time">{{section.from}}</div>
  <div class="to time">{{section.to}}</div>
  <div class="image" style="background-image: url('{{section.image}}')"></div>
  <div class="text">
    <p>{{section.title}}</p>
    <p>{{section.description}}</p>
    <p>{{section.organization}}</p>
    <p>{{section.location}}</p>
  </div>
</div>
